<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signup"
    android:background="@mipmap/viewsignup"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="319dp"
        android:layout_height="472dp"
        android:gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861">


        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="49dp"
            android:background="@drawable/border"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            >
            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="131dp"
                android:layout_height="49dp"
                android:backgroundTint="@color/white"
                android:text="Sign in"
                android:textColor="@color/blue"
                android:textSize="24dp"
                />
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="131dp"
                android:layout_height="49dp"
                android:backgroundTint="@color/blue"
                android:text="Sign up"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="24dp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="247dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:hint="Enter username"
            />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="247dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="-20dp"
            android:hint="Password" />

        <ImageButton
            android:id="@+id/btnHintPassword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/eyepassword" />

        <EditText
            android:id="@+id/txtCPassword"
            android:layout_width="247dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:hint="Re-enter password"/>

        <ImageButton
            android:id="@+id/btnHintCPassword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/eyepassword" />


        <EditText
            android:id="@+id/txtEmailSignup"
            android:layout_width="247dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="95dp"
            android:hint="Enter Email"/>


        <Button
            android:id="@+id/btnSignUpBottom"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:backgroundTint="@color/blue"
            android:text="Sign in"
            android:layout_gravity="center"
            android:textSize="24dp" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>